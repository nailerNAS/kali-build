#!/bin/sh

# build requirement
apt update
apt install -y bc

# build driver
git clone https://github.com/gglluukk/rtl8188eus.git
cd rtl8188eus
make && sudo make install
echo 'blacklist r8188eu' | sudo tee -a '/etc/modprobe.d/realtek.conf'
echo 'blacklist rtl8xxxu' | sudo tee -a '/etc/modprobe.d/realtek.conf'

